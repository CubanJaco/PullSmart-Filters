{
   "manifest_version": 3,
   "name": "PullSmart Filters",
   "description": "Add custom filters to GitHub PR page.",
   "version": "1.0",
   "icons": {
      "128": "icons/icon128.png",
      "48": "icons/icon48.png",
      "32": "icons/icon32.png",
      "16": "icons/icon16.png"
   },
   "content_scripts": [
      {
         "css": [ "style.css" ],
         "js": [ "content.js" ],
         "matches": [ "*://github.com/*" ],
         "run_at": "document_end"
      }
   ]
}
